{
  "env": {
    "node": true,
    "es6": true
  },
  "compilerOptions": {
    "baseUrl": "types",
    "typeRoots": ["types"],
    "paths": { "*": ["types/*"] },
      "target": "es5",
      "lib": ["es6"],
      "types": ["reflect-metadata", "node"],
      "module": "commonjs",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
  }
}